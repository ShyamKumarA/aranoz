<%-include('../layouts/adminHeader.ejs')%>

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-sm-12 col-xl-6">
      <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Edit Coupon</h6>
        <form action="/admin/editCoupon?id=<%=coupon._id %>" method="post">
          <div class="mb-3">
            <label class="form-label">Code</label>
            <input
              type="text"
              id="code"
              value="<%=coupon.code%>"
              class="form-control"
              name="code"
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Discount Type</label>
            <select
              class="form-select form-select-sm mb-3"
              aria-label=".form-select-sm example"
              name="discountType"
              id="discountType"
            >
              <option><%=coupon.discountType%></option>
              <option>Fixed</option>
              <option>Percentage</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label">Discount Amount</label>
            <input
              type="String"
              class="form-control"
              placeholder="Enter the discount amount"
              id="amount"
              value="<%=coupon.discountAmount%>"
              name="amount"
              type="number"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Expiry Date</label>
            <input
              type="date"
              class="form-control"
              id="date"
              name="date"
              value="<%=coupon.expiryDate%>"
              type="date"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Max Cart Amount</label>
            <input
              class="form-control"
              placeholder="Enter the Cart amount"
              id="cartAmount"
              name="cartAmount"
              value="<%=coupon.maxCartAmount%>"
              type="number"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Max Discount Amount</label>
            <input
              class="form-control"
              placeholder="Enter the Discount Amount"
              id="discountAmount"
              name="discountAmount"
              value="<%=coupon.maxDiscountAmount%>"
              type="number"
              required
            />
          </div>
          <div class="mb-3">
            <label class="form-label">Max Coupons</label>
            <input
              class="form-control"
              placeholder="Enter the count of coupons"
              id="couponCount"
              value="<%=coupon.maxUsers%>"
              name="couponCount"
              type="number"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- Table End -->
<%-include('../layouts/adminFooter.ejs')%>
