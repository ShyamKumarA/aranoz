<%-include('../layouts/adminHeader.ejs')%>
<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
  <div class="row g-4">
    <div class="col-12">
      <div class="bg-light rounded h-100 p-4">
        <h6 class="mb-4">Users</h6>
        <div class="table-responsive">
          <% if(user.length > 0){ %>

          <table class="table" id="userTable">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Mobile</th>
                <th scope="col">Verified</th>
                <th scope="col">Block/Unblock</th>
              </tr>
            </thead>
            <tbody>
              <%user.forEach(function(user,index){%>
              <tr>
                <td><%=index+1%></td>
                <td><%=user.username%></td>
                <td><%=user.email%></td>
                <td><%=user.mobile%></td>
                <% if(user.is_verified==1){%>
                <td>Yes</td>
                <%}else{%>
                <td>No</td>
                <%}%> <% if(user.is_blocked){ %>
                <td>
                  <a href="/admin/blockUnblock?id=<%=user._id%>"
                    ><button
                      type="button"
                      class="btn btn-danger rounded-pill m-2"
                    >
                      Blocked
                    </button></a
                  >
                </td>

                <% }else{ %>
                <td>
                  <a
                    href="/admin/blockUnblock?id=<%=user._id%>"
                    onclick="return confirm('Are you sure you want to Block this User?');"
                    ><button
                      type="button"
                      class="btn btn-success rounded-pill m-2"
                    >
                      Active
                    </button></a
                  >
                </td>

                <% } %>
              </tr>

              <% })%>
            </tbody>
          </table>

          <% }else{ %>
          <div><H3>Users Empty</H3></div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Table End -->

<%-include('../layouts/adminFooter.ejs')%>
