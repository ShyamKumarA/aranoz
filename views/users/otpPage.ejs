    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <h2>OTP Verification</h2>
                        <p>Home <span>-</span> OTP Verification</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
